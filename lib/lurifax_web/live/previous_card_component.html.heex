<div
    class="opacity-0"
    x-cloak
    x-data="{ open: false }"
    x-init="$nextTick(() => open = true)"
    x-show="open"
    x-transition:enter="transition ease-in duration-500"
    x-transition:enter-start="transform opacity-100 translate-x-0"
    x-transition:enter-end="transform opacity-0 translate-x-28"
>
    <img
        class="w-40"
        src={Routes.static_path(@socket, "/images/cards/card_back.svg")}
        alt="card back"
    >
</div>